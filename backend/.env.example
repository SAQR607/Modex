# Node.js Environment
NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=*

# Database Configuration
# For Hostinger: Use DB_SOCKET (socket connection)
DB_SOCKET=/var/lib/mysql/mysql.sock

# For other hosts: Use DB_HOST and DB_PORT (TCP connection)
# DB_HOST=localhost
# DB_PORT=3306

# Database Credentials
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Database Dialect (optional, defaults to mysql)
DB_DIALECT=mysql
