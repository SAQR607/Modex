# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# IMPORTANT: These values must be set after deployment
# Get these from your Hostinger hosting panel
DB_HOST=localhost
DB_PORT=3306
DB_NAME=modex_platform
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# JWT Configuration
# IMPORTANT: Generate a strong random string for production
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=67108864
UPLOAD_PATH=./uploads

# Frontend URL (for CORS)
# Update this to your production frontend URL after deployment
FRONTEND_URL=http://localhost:3000
